{
  "name": "@typescript-fullstack-onboarding/backend",
  "version": "0.1.0",
  "description": "バックエンドアプリケーション",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist node_modules",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:push": "prisma db push",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "format:prisma": "prisma format",
    "schema:copy": "cp ../schema/openapi.yaml ./openapi.yaml",
    "generate:client": "pnpm schema:copy && openapi-zod-client ./openapi.yaml -o ./src/generated/client/client.gen.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.15.0",
    "@hono/zod-validator": "^0.7.0",
    "@prisma/client": "^6.11.1",
    "@types/bcrypt": "^5.0.2",
    "@zodios/core": "^10.9.6",
    "bcrypt": "^6.0.0",
    "hono": "^4.8.4",
    "neverthrow": "^8.2.0",
    "pino": "^9.7.0",
    "pino-http": "^10.5.0",
    "zod": "^3.25.74"
  },
  "devDependencies": {
    "@pnpm/client": "^1000.0.20",
    "dotenv": "^17.1.0",
    "openapi-zod-client": "^1.18.3",
    "prisma": "^6.11.1",
    "tsx": "^4.7.1",
    "uuid": "^11.1.0"
  },
  "prisma": {
    "schema": "./prisma"
  }
}

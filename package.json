{
  "name": "typescript-fullstack-onboarding",
  "version": "0.1.0",
  "description": "組織向けTodo管理アプリ - TypeScript Fullstack Onboarding",
  "private": true,
  "volta": {
    "node": "22.16.0"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "pnpm --parallel dev",
    "build": "pnpm --recursive build",
    "test": "pnpm --recursive test",
    "type-check": "pnpm --recursive type-check",
    "clean": "pnpm --recursive clean",
    "db:generate": "pnpm --filter backend db:generate",
    "db:migrate": "pnpm --filter backend db:migrate",
    "db:seed": "pnpm --filter backend db:seed",
    "schema:compile": "pnpm --filter schema compile",
    "schema:copy": "pnpm --filter backend schema:copy && pnpm --filter frontend schema:copy",
    "generate:client": "pnpm --filter backend generate:client && pnpm --filter frontend generate:client",
    "apply": "pnpm schema:compile && pnpm schema:copy && pnpm generate:client",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check --write .",
    "prepare": "husky",
    "tf:login": "gcloud auth application-default login",
    "tf:init": "cd terraform/environments/prd && terraform init",
    "tf:plan": "cd terraform/environments/prd && terraform plan",
    "tf:apply": "cd terraform/environments/prd && terraform apply",
    "tf:destroy": "cd terraform/environments/prd && terraform destroy"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "typescript": "^5.8.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,jsonc}": "biome format --write",
    "backend/**/*.prisma": "pnpm --filter backend exec prisma format",
    "schema/**/*.tsp": "pnpm --filter schema exec tsp format"
  }
}
